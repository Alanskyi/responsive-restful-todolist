<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="main.css"> <!-- looks inside "public folder" -->
  <title><%= headTitle %></title>
  <script src="main.js" defer></script>
</head>

<body>
  <div class="header wrapper" data-name="header">
    <h1 class="header__title">ToDo list</h1>

    <div class="header__container">
      <input type="text" class="header__input" name="inptext" id="inptext" placeholder='read "Possessed"...' data-name="input-text">
      <button class="header__button" data-name="add-button">Write!</button>
    </div>

  </div> <!-- .header -->

  <div class="main wrapper">
    <% if(!(notes.length > 0)) { %> 
      <h2 class="main__title">No ToDos</h2>
    <% } else { %> 
      <h2 class="main__title">ToDos</h2>

      <div class="main__notes" data-name="container">
        <% notes.forEach(note => { %>
          <div class="main__note" data-name="note" >

            <div class="main__content" data-name="content" id="<%= note._id %>">
              <%= note.content %> 
            </div> 
          
            <div class="main__actions">
              <button class="main__edit-button main__button" data-name="edit-button">Edit</button>
              <button class="main__delete-button main__button" data-name="delete-button">Delete</button>
            </div> 
          </div> <!-- main__note -->
        <% }) %>       
      </div> <!-- .main__notes -->
    <% } %> 
  </div> <!-- .main -->  

        
</body>
</html>
